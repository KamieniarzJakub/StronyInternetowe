@model TournamentSystem.ViewModels.MyTournamentsViewModel

@{
    ViewData["Title"] = "Moje turnieje";
}

<h2>Moje turnieje</h2>

<hr />

<h3>🎮 Twoje Nadchodzące Mecze</h3>
@if (Model.UpcomingMatches != null && Model.UpcomingMatches.Any())
{
    @Html.Partial("_MatchTable", Model.UpcomingMatches)
}
else
{
    <p>Brak nadchodzących meczów.</p>
}

<hr />

<h3>🔜 Nadchodzące turnieje (Uczestnik)</h3>
@if (Model.Upcoming != null && Model.Upcoming.Any())
{
    @Html.Partial("_TournamentTable", Model.Upcoming)
}
else
{
    <p>Nie jesteś zapisany do żadnych nadchodzących turniejów.</p>
}

<hr />

<h3>🏁 Aktywne turnieje (Uczestnik)</h3>
@if (Model.Active != null && Model.Active.Any())
{
    @Html.Partial("_TournamentTable", Model.Active)
}
else
{
    <p>Nie bierzesz udziału w żadnych aktywnych turniejach.</p>
}

<hr />

<h3>⏳ Zakończone turnieje (Uczestnik)</h3>
@if (Model.Past != null && Model.Past.Any())
{
    @Html.Partial("_TournamentTable", Model.Past)
}
else
{
    <p>Nie brałeś udziału w żadnych zakończonych turniejach.</p>
}

<hr />

<h3>🧑‍💼 Organizowane turnieje</h3>
@if (Model.Organized != null && Model.Organized.Any())
{
    @Html.Partial("_TournamentTable", Model.Organized)
}
else
{
    <p>Nie organizujesz żadnych turniejów.</p>
}
