@{
    ViewData["Title"] = "Potwierdź reset hasła";
    var email = TempData["ResetEmail"] as string;
    var userExists = (bool?)TempData["UserExists"] ?? false;
}

<h2>Czy chcesz zresetować hasło dla konta:</h2>

@if (!userExists)
{
    <p><strong>@email</strong></p>
    <p>Jeśli takie konto istnieje, wyślemy link do resetu hasła.</p>
}
else
{
    <p><strong>@email</strong></p>
    <p>Potwierdź, że chcesz wysłać link do resetu hasła.</p>
}

<form asp-action="SendPasswordResetLink" method="post">
    <input type="hidden" name="Email" value="@email" />
    <button type="submit" class="btn btn-danger">Tak, wyślij link</button>
    
</form>
